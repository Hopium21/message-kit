{
  "name": "one-to-one",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w & sleep 1 && nodemon dist/index.js",
    "dev:bun": "tsc -w & sleep 1 && bun run --watch dist/index.js",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@redis/client": "^1.5.16",
    "@xmtp/message-kit": "workspace:*",
    "@xmtp/redis-persistence": "^0.0.4",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/node-cron": "^3.0.11",
    "nodemon": "^3.1.4",
    "typescript": "^5.5.3"
  },
  "packageManager": "yarn@4.2.2",
  "engines": {
    "node": ">=20"
  }
}
